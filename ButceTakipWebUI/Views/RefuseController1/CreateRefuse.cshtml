@model ButceTakipWebUI.Dtos.RefuseDtos.CreateRefuseDto

@{
    ViewData["Title"] = "Create Refuse";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reddet Ekranı</title>
    <link rel="stylesheet" href="~/css/StyleSheet.css">
</head>
<body>
    <section class="menu">
        <h1>Reddet</h1>
        <div class="box-container">
            <div class="box">
                <div class="box-header">
                   
                </div>
            
                <div class="reason-section">
                    <label for="reason">Planlamanın Reddedilme Sebebi</label>
                    <textarea id="reason" name="reason" rows="10" cols="50" asp-for="RefuseReason"></textarea>
                </div>
                <button type="submit" class="btn">Gönder</button>
            </div>
        </div>
    </section>
</body>
</html>
